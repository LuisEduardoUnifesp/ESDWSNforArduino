cplusplus {{
#include "RoutingPacket_m.h"
}}

class RoutingPacket;

enum WSDFBPacketDef {
	DATA = 1;
	CONTROLOLLER_DISCOVERY = 2;
	RECOVERY_ROUTER = 3;
	REPORT = 4;
	REPROGRAM = 5;

} 

packet WSDFNPacket extends RoutingPacket {
	int WSDFNPacketKind enum (WSDFBPacketDef);	// 1 byte
	int TTL;		//Time to live 3 bits
	int toLevel;		//Destination Level 5 bits
}

